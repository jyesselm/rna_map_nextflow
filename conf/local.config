/*
 * Local execution profile
 * 
 * Use this profile for running on a local machine (not a cluster).
 * 
 * Usage:
 *   nextflow run main.nf -profile local --fasta ref.fasta --fastq1 reads.fastq
 */

process {
    executor = 'local'
    
    // Local execution - use available CPUs
    cpus = { task.cpus ?: 4 }
    memory = { task.memory ?: '8 GB' }
    time = { task.time ?: '2h' }
    
    // No cluster options needed for local execution
    clusterOptions = ''
}

// Include base configuration
includeConfig 'conf/base.config'

