/*
 * Nextflow Parameters Configuration File
 * 
 * This file allows you to set default parameters for the RNA MAP Nextflow workflow.
 * You can override these values via command-line arguments or by creating your own
 * config file and loading it with: nextflow run main.nf -c my_config.config
 * 
 * Usage:
 *   nextflow run main.nf -c params.config --fasta ref.fasta --fastq1 reads.fastq
 * 
 * Or copy this file and customize it:
 *   cp params.config my_params.config
 *   # Edit my_params.config with your preferred defaults
 *   nextflow run main.nf -c my_params.config --fasta ref.fasta --fastq1 reads.fastq
 */

// Input files (set via CLI or here for defaults)
params.fasta = null
params.fastq1 = null
params.fastq2 = null
params.dot_bracket = null
params.samples_csv = null

// Output directory
params.output_dir = "results"

// Quality control options
params.skip_fastqc = false
params.skip_trim_galore = false

// FastQC arguments
// Examples:
//   params.fastqc_args = "--threads 4"
//   params.fastqc_args = "--threads 4 --format fastq"
//   params.fastqc_args = "--threads 4 --kmers 7"
params.fastqc_args = ""

// Trim Galore arguments
params.tg_q_cutoff = 20
// Additional Trim Galore arguments (beyond --quality)
// Examples:
//   params.tg_args = "--length 20"
//   params.tg_args = "--length 20 --adapter AGATCGGAAGAGC"
//   params.tg_args = "--length 20 --adapter AGATCGGAAGAGC --adapter2 AGATCGGAAGAGC"
params.tg_args = ""

// Bowtie2 alignment arguments (semicolon-separated)
// Examples:
//   params.bt2_alignment_args = "--local;--no-unal;--no-discordant;--no-mixed;-X 1000;-L 12"
//   params.bt2_alignment_args = "--local;--no-unal;-p 8;-X 2000"
//   params.bt2_alignment_args = "--sensitive-local;--no-unal;--no-discordant"
params.bt2_alignment_args = "--local;--no-unal;--no-discordant;--no-mixed;-X 1000;-L 12"

// Bit vector generation parameters
params.qscore_cutoff = 20
params.map_score_cutoff = 20
params.summary_output_only = false

// General options
params.overwrite = false

// Resource limits (for SLURM/cluster execution)
// Note: These are defaults for base config. Profiles may override these.
params.max_cpus = 16
params.max_memory = "32 GB"
params.max_time = "24h"
params.account = null
params.partition = "normal"

// Queue size for task batching (SLURM executor)
// Higher = more batching = fewer job submissions (good for fast tasks)
// Lower = less batching = immediate submission (good for slow tasks)
// Range: 1 (immediate) to 50+ (heavy batching)
params.queue_size = null  // Default: profile-specific

// Parallel processing options
params.split_fastq = false
params.chunk_size = 1000000  // Reads per chunk (1M reads default)

// Container options (for Singularity/Apptainer)
params.container_path = null  // Path to Singularity/Apptainer image (.sif file)

