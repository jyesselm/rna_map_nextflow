/*
 * Example Custom Configuration
 * 
 * Copy this file and customize for your specific workload.
 * 
 * Usage:
 *   nextflow run main.nf -profile slurm -c conf/custom_example.config ...
 */

process {
    // Global queue size - can be overridden per process
    queueSize = 1  // Submit immediately (no batching)
    
    // Customize specific processes by name
    withName: 'RNA_MAP_BIT_VECTORS' {
        // This is a slow task - submit immediately
        queueSize = 1
        executor = 'slurm'
        cpus = 16
        memory = '32 GB'
        time = '24h'
    }
    
    // Customize by label
    withLabel: 'process_high' {
        queueSize = 1      // Submit immediately
        time = '48h'       // Long time limit
        memory = '64 GB'   // More memory
    }
    
    // Batch fast tasks
    withLabel: 'process_low' {
        queueSize = 50     // Batch many fast tasks together
    }
    
    // Create a custom label for very slow tasks
    // Add this label to your process: label 'process_very_slow'
    withLabel: 'process_very_slow' {
        queueSize = 1      // No batching
        time = '72h'       // Very long time
        memory = '128 GB'  // Large memory
    }
}
